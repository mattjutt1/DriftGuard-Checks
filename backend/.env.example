# PromptEvolver Backend Configuration

# Application Settings
APP_NAME="PromptEvolver"
APP_VERSION="2.0.0"
DEBUG=true
API_V1_STR="/api/v1"

# Server Settings
HOST="0.0.0.0"
PORT=8000
RELOAD=true

# Security Settings (CHANGE THESE IN PRODUCTION!)
SECRET_KEY="promptevolver-super-secret-key-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Database Settings
DATABASE_URL="sqlite+aiosqlite:///./promptevolver.db"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Settings
REDIS_URL="redis://localhost:6379/0"
REDIS_CACHE_TTL=3600
REDIS_SESSION_TTL=86400

# Celery Settings
CELERY_BROKER_URL="redis://localhost:6379/1"
CELERY_RESULT_BACKEND="redis://localhost:6379/2"
CELERY_TASK_SERIALIZER="json"
CELERY_RESULT_SERIALIZER="json"
CELERY_TIMEZONE="UTC"

# Ollama Settings
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="qwen2.5:7b-instruct"
OLLAMA_TIMEOUT=120
OLLAMA_MAX_RETRIES=3

# PromptWizard Settings
PROMPTWIZARD_ITERATIONS=3
PROMPTWIZARD_ROUNDS=3
PROMPTWIZARD_TEMPERATURE=0.7
PROMPTWIZARD_MAX_TOKENS=2048
PROMPTWIZARD_BATCH_SIZE=10

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# CORS Settings
ALLOWED_HOSTS="*"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000"

# Logging Settings
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Performance Settings
MAX_OPTIMIZATION_TIME=300
MAX_CONCURRENT_OPTIMIZATIONS=10
BATCH_PROCESSING_DELAY=0.1

# Monitoring Settings
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001