{
  "name": "driftguard-checks-app",
  "version": "1.0.0",
  "description": "GitHub App for prompt evaluation check runs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/index-integrated.js",
    "start:dev": "PROBOT_LOG_LEVEL=debug PORT=3001 NODE_OPTIONS='-r ts-node/register' probot run ./src/index-integrated.ts",
    "start:pm2": "pm2 start ecosystem.config.cjs",
    "start:redis": "./start-with-redis.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest test/security.test.ts --verbose",
    "test:integration": "jest test/integration.test.ts --verbose",
    "smoke": "node scripts/smoke-test.js",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "security:check": "npm run security:audit && node scripts/security-check.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.0",
    "axios": "^1.6.5",
    "bull": "^4.12.0",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ip-range-check": "^0.2.0",
    "probot": "^14.0.2",
    "raw-body": "^2.5.2",
    "redis": "^4.6.12",
    "unzipper": "^0.10.14",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^6.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.12",
    "@types/unzipper": "^0.10.7",
    "eslint-plugin-security": "^2.1.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
