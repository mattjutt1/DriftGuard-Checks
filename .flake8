[flake8]
# E501: line too long (we use black for formatting)
# C901: function is too complex (we'll refactor these later)
# F401: imported but unused (common in __init__.py files)
# E203: whitespace before ':' (conflicts with black)
# W503: line break before binary operator (conflicts with black)
ignore = E203, W503
extend-ignore = E501, C901

# Exclude third-party and generated code
exclude = 
    .git,
    __pycache__,
    venv,
    .venv,
    node_modules,
    nextjs-app/node_modules,
    nextjs-app/.next,
    microsoft-promptwizard,
    hf-deployment,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache

# Per-file ignores for specific patterns
per-file-ignores = 
    # Ignore import errors in __init__ files
    */__init__.py: F401
    # Ignore f-string without placeholders (common in logging)
    */test*.py: F541
    # Ignore complexity in test files  
    test_*.py: C901
    # Ignore unused imports in config files
    */config.py: F401
    # Legacy code we'll fix later
    cli/promptevolver_cli/main.py: C901

# Set reasonable limits
max-line-length = 120
max-complexity = 15